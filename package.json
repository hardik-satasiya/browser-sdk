{
  "name": "@lightelligence/browser-sdk",
  "version": "0.2.0",
  "description": "javascript SDK for the lightelligence-platform",
  "main": "dist/bundle.web.js",
  "scripts": {
    "start": "webpack --config webpack.config.js --watch true",
    "test": "jest --coverage",
    "lint": "eslint src/** test/**",
    "version": "node -pe \"process.env.BITBUCKET_TAG || process.env.BITBUCKET_COMMIT || 'current'\"",
    "build:docs": "documentation build src/** -f html -o docs --theme lightelligence_theme --project-version $(npm run -s version)",
    "build": "rm -rf dist && npm run transpile-umd && npm run transpile-esm && npm run transpile-cjs",
    "transpile-umd": "webpack --config webpack.config.js",
    "transpile-esm": "BABEL_ENV=esm babel src -d dist/esm --copy-files",
    "transpile-cjs": "BABEL_ENV=cjs babel src -d dist/cjs --copy-files ",
    "license-report": "legally",
    "precommit": "npm run lint && npm run test && sh scripts/branch-name "
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/lightelligence/javascript-sdk.git"
  },
  "keywords": [
    "osram",
    "lightelligence",
    "iot",
    "js",
    "sdk"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/runtime": "^7.2.0",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "documentation": "^8.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^0.14.3",
    "jest": "^24.7.1",
    "jest-fetch-mock": "^1.7.5",
    "jest-localstorage-mock": "^2.4.0",
    "legally": "^2.10.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "oidc-client": "^1.5.2"
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock",
      "./setupJest.js"
    ]
  }
}
